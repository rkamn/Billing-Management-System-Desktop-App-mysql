    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <AnchorPane prefHeight="379.0" prefWidth="502.0">
            <children>

                        <ImageView fitHeight="392.0" fitWidth="502.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@icons/all-page-background-image.png" />
                            </image>
                        </ImageView>
                        <ImageView fitHeight="57.0" fitWidth="62.0" layoutX="120.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@icons/deleteBuyer.png" />
                            </image>
                        </ImageView>
                        <ImageView fitHeight="41.0" fitWidth="246.0" layoutX="191.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@icons/deleteBuyer-ani.gif" />
                            </image>
                        </ImageView>
                        <Separator layoutX="37.0" layoutY="121.0" prefHeight="2.0" prefWidth="436.0" />
                        <Label layoutX="97.0" layoutY="90.0" text="Mobile : " />
                        <TextField fx:id="searchBox" layoutX="180.0" layoutY="85.0" onMouseClicked="#handleFocusGainedSearchMobile" onMouseExited="#handleFocusLostSearchMobile" promptText="your name" />
