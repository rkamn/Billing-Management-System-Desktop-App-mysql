                        <Button fx:id="deleteBtn" layoutX="99.0" layoutY="331.0" mnemonicParsing="false" onAction="#deleteBtnHandler" text="Delete Buyer" />
                        <Button fx:id="resetBtn" layoutX="248.0" layoutY="331.0" mnemonicParsing="false" onAction="#resetBtnHandler" text="Reset" />
                        <Button fx:id="closeBtn" layoutX="340.0" layoutY="331.0" mnemonicParsing="false" onAction="#closeBtnHandler" text="Close" />

            </children>

        </AnchorPane>
    </children>


</VBox>
